        ContentTemplate="{DataTemplate views:BaseTabbedPage}"
        Route="MainPage" />

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:BaseTabbedPage}"
        Route="MainPage" /> -->

</Shell>