<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:local="clr-namespace:SpaceXHistory.Views"
            x:Class="SpaceXHistory.Views.BaseTabbedPage"
            xmlns:android="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.AndroidSpecific;assembly=Microsoft.Maui.Controls"
            android:TabbedPage.ToolbarPlacement="Bottom"
            BarBackground="{AppThemeBinding Light='White', Dark='Black'}"
            UnselectedTabColor="{OnIdiom Phone='#9ba2aa'}"
            SelectedTabColor="{OnIdiom Phone='#006BB5'}">

    <NavigationPage Title="Home" IconImageSource="base" >
        <x:Arguments>
            <local:HomePage/>
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="Upcoming Launches" IconImageSource="ship">
        <x:Arguments>
            <local:UpcomingLaunchesPage/>
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="Completed Launches" IconImageSource="cap">
        <x:Arguments>
            <local:CompletedLaunchesPage/>
        </x:Arguments>
    </NavigationPage>
</TabbedPage>