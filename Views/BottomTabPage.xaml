<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:local="clr-namespace:SpaceXHistory.Views"
            x:Class="SpaceXHistory.Views.BottomTabPage"
            xmlns:android="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.AndroidSpecific;assembly=Microsoft.Maui.Controls"
            android:TabbedPage.ToolbarPlacement="Bottom"
            BarBackground="Black"
            UnselectedTabColor="#adb5bd"
            SelectedTabColor="#006BB5">

    <NavigationPage Title="Home" IconImageSource="base">
        <x:Arguments>
            <local:HomePage/>
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="Upcoming Launches" IconImageSource="ship">
        <x:Arguments>
            <local:UpcomingLaunchesPage/>
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="Latest Launches" IconImageSource="cap">
        <x:Arguments>
            <local:LatestLaunchesPage/>
        </x:Arguments>
    </NavigationPage>
</TabbedPage>