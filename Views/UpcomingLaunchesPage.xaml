<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SpaceXHistory.Views.UpcomingLaunchesPage"
             xmlns:model="clr-namespace:SpaceXHistory.Models"
             xmlns:viewmodel="clr-namespace:SpaceXHistory.ViewModels"
             x:DataType="viewmodel:UpcomingLaunchesViewModel"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="Black">

    <ContentPage.Resources>
        <ResourceDictionary>
            <x:Double x:Key="launchTitleFontSize">20</x:Double>
            <x:Double x:Key="launchNameFontSize">30</x:Double>
            <x:Double x:Key="launchContentFontSize">18</x:Double>
            <x:Double x:Key="frameTextFontSize">16</x:Double>
            <Color x:Key="launchTitleTextColor">#adb5bd</Color>
            <Color x:Key="launchContentTextColor">White</Color>
            <Color x:Key="frameBgColor">Transparent</Color>
        </ResourceDictionary>

        <Style x:Key="LaunchTitleLabelStyle" TargetType="Label">
            <Setter Property="FontFamily" Value="Light" />
            <Setter Property="FontSize" Value="{StaticResource launchTitleFontSize}"/>
            <Setter Property="TextColor" Value="{StaticResource launchTitleTextColor}" />
        </Style>

        <Style x:Key="LaunchContentLabelStyle" TargetType="Label">
            <Setter Property="FontFamily" Value="Medium"/>
            <Setter Property="FontSize" Value="{StaticResource launchContentFontSize}"/>
            <Setter Property="TextColor" Value="{StaticResource launchContentTextColor}" />
        </Style>

        <Style x:Key="LaunchNameLabelStyle" TargetType="Label">
            <Setter Property="FontFamily" Value="Bold"/>
            <Setter Property="FontSize" Value="{StaticResource launchNameFontSize}"/>
            <Setter Property="TextColor" Value="{StaticResource launchContentTextColor}" />
        </Style>

        <Style x:Key="patchStyle" TargetType="Image">
            <Setter Property="HeightRequest" Value="120" />
            <Setter Property="WidthRequest" Value="120" />
        </Style>

        <Style x:Key="frameIcon" TargetType="Image">
            <Setter Property="HeightRequest" Value="14"/>
            <Setter Property="WidthRequest" Value="24"/>
        </Style>

        <Style x:Key="frameLabel" TargetType="Label">
            <Setter Property="FontFamily" Value="Medium" />
            <Setter Property="FontSize" Value="{StaticResource frameTextFontSize}" />
            <Setter Property="TextColor" Value="{StaticResource launchContentTextColor}" />
        </Style>
    </ContentPage.Resources>
    
    <ListView ItemsSource="{Binding NextLaunches}" ItemTapped="ListView_ItemTapped" BackgroundColor="Black" HasUnevenRows="True" Margin="20" SeparatorVisibility="None">
        
        <ListView.Header>
            <Grid RowDefinitions="auto, auto" ColumnDefinitions="auto">
                <Image Grid.Row="0" Grid.Column="0" Margin="0" WidthRequest="150" HeightRequest="40" Source="logo.png" />
                <Label Grid.Row="1" Grid.Column="0" Margin="0, 20, 0, 0" Text="Upcoming Launches" FontFamily="Light"
                       FontSize ="{StaticResource launchTitleFontSize}" TextColor="{StaticResource launchTitleTextColor}" />
            </Grid>
        </ListView.Header>

        <ListView.ItemTemplate>
            <DataTemplate x:DataType="model:Root">
                <ViewCell>
                    <Grid RowDefinitions="auto" ColumnDefinitions="auto, auto" Margin="0, 20, 0, 0">
                        <Image Grid.Row="0" Grid.Column="0" HeightRequest="120" WidthRequest="120" 
                               Source="{Binding Links.Patch.Small, TargetNullValue='https://i.imgur.com/8pgWyf4.png'}"/>
                        <Grid Grid.Row="0" Grid.Column="1" RowDefinitions="auto, auto, auto, auto" ColumnDefinitions="auto" 
                              VerticalOptions="Center" Margin="20, 0, 0, 0">
                            <Label Grid.Row="0" Grid.Column="0" Style="{StaticResource LaunchNameLabelStyle}" Margin="0, 0, 0, 10" Text="{Binding Name}"/>
                            <Label Grid.Row="1" Grid.Column="0"  Style="{StaticResource LaunchContentLabelStyle}"
                                   Text="{Binding Date_local, StringFormat='{0:ddd, dd MMM yyyy}', TargetNullValue='Not Informed', FallbackValue='Not Informed'}"
                                   FontFamily="Medium" Margin="0, 0, 0, 5" TextColor="White"/>
                            <Label Grid.Row="2" Grid.Column="0" FontFamily="Medium" Margin="0, 0, 0, 10" Text="{Binding Status}" 
                                   Style="{StaticResource LaunchContentLabelStyle}" TextColor="{Binding StatusColor}" />
                            <Frame Grid.Row="3" Grid.Column="0" HorizontalOptions="Start" BackgroundColor="{StaticResource frameBgColor}" Padding="6, 10">
                                <StackLayout Orientation="Horizontal">
                                    <Image Source="youtube" WidthRequest="20" HeightRequest="10" Style="{StaticResource frameIcon}"/>
                                    <Label Text="Watch the launch" Margin="6, 0, 0, 0" HorizontalOptions="Center" 
                                           VerticalOptions="Center" Style="{StaticResource frameLabel}" />
                                </StackLayout>
                            </Frame>
                        </Grid>
                    </Grid>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
            
    </ListView>
</ContentPage>