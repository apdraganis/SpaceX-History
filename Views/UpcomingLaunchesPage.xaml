<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SpaceXHistory.Views.UpcomingLaunchesPage"
             xmlns:model="clr-namespace:SpaceXHistory.Models"
             xmlns:viewmodel="clr-namespace:SpaceXHistory.ViewModels"
             x:DataType="viewmodel:UpcomingLaunchesViewModel"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="Black">
    <ListView ItemsSource="{Binding NextLaunches}" ItemTapped="ListView_ItemTapped" BackgroundColor="Black" HasUnevenRows="True" Margin="20"
              SeparatorVisibility="None">
        
        <ListView.Header>
            <Grid RowDefinitions="auto, auto" ColumnDefinitions="auto">
                <Image Grid.Row="0" Grid.Column="0" Margin="0" WidthRequest="150" HeightRequest="40" HorizontalOptions="Start" Source="logo.png" />
                <Label Grid.Row="1" Grid.Column="0" Margin="0, 20, 0, 0" Text="Next Launch" FontFamily="Light" TextColor="#adb5bd" />
            </Grid>
        </ListView.Header>

        <ListView.ItemTemplate>
            <DataTemplate x:DataType="model:Root">
                <ViewCell>
                    <Grid RowDefinitions="auto" ColumnDefinitions="auto, auto" Margin="0, 20, 0, 0">
                        <Image Grid.Row="0" Grid.Column="0" HeightRequest="120" WidthRequest="120" 
                               Source="{Binding Links.Patch.Small, TargetNullValue='https://i.imgur.com/8pgWyf4.png'}"/>
                        <Grid Grid.Row="0" Grid.Column="1" RowDefinitions="auto, auto, auto, auto" ColumnDefinitions="auto" VerticalOptions="Center" Margin="20, 0, 0, 0">
                            <Label Grid.Row="0" Grid.Column="0" FontSize="30" FontFamily="Bold" TextColor="White" Margin="0, 0, 0, 10" Text="{Binding Name}"/>
                        </Grid>
                    </Grid>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
            
    </ListView>
</ContentPage>