<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SpaceXHistory.Views.SettingsPage"
             Title="SettingsPage"
             BackgroundColor="{AppThemeBinding Light='White', Dark='Black'}">

    <Grid RowDefinitions="auto" ColumnDefinitions="auto, auto">
        <HorizontalStackLayout Margin="20, 0, 0, 0">
            <Label Grid.Row="0" Grid.Column="0" Text="Dark Mode" Style="{StaticResource LaunchContentLabelStyle}" VerticalOptions="Center" />
            <Switch Grid.Row="0" Grid.Column="1" Margin="8, 0, 0, 0" OnColor="DarkGrey" ThumbColor="{AppThemeBinding Light='Black',Dark='White'}" IsToggled="False" VerticalOptions="Center" Toggled="Switch_Toggled"/>
        </HorizontalStackLayout>
    </Grid>
</ContentPage>